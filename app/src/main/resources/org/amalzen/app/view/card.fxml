<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<Button fx:id="cardButton" mnemonicParsing="false" prefHeight="180.0" prefWidth="240.0"
        style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/21.0.7-ea"
        xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.amalzen.app.components.CardComponent">
    <graphic>
        <StackPane fx:id="cardStackPane">
            <children>
                <StackPane fx:id="cardFaces" prefHeight="150.0" prefWidth="200.0">
                    <children>
                        <ImageView fx:id="cardBack" fitHeight="240.0" fitWidth="240.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../images/cardFront.png"/>
                            </image>
                        </ImageView>
                        <ImageView fx:id="cardFront" fitHeight="240.0" fitWidth="240.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../images/card-easy.png"/>
                            </image>
                        </ImageView>
                    </children>
                </StackPane>
                <Text fx:id="cardLabel" fill="BLACK" opacity="0.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Placeholder" wrappingWidth="77.634765625">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Text>
            </children>
        </StackPane>
    </graphic>
</Button>
