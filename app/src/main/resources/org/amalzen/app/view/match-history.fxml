<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="mainPanel" fx:id="matchHistoryPane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21.0.7-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.amalzen.app.match_history.MatchHistoryController">
    <children>

        <!-- Background Image (Placed First to Prevent Overlap) -->
        <ImageView id="background" fitHeight="500.0" fitWidth="800.0">
            <image>
                <Image url="@../images/match-history-background.png" />
            </image>
        </ImageView>

        <!-- Title Image -->
        <ImageView fitHeight="76.0" fitWidth="475.0" layoutX="164.0" layoutY="13.0">
            <image>
                <Image url="@../images/match-codex.png" />
            </image>
        </ImageView>

        <!-- Need to Fix match-entry-background as this is not current transparent -->
        <!-- "-fx-background-image: url('../images/match-entry-background.png');  -->
        <!-- Scrollable Match History -->
        <ScrollPane layoutX="23.0" layoutY="93.0" prefHeight="380.0" prefWidth="750.0" style="-fx-background-color: transparent;">
            <content>
                <VBox id="matchContainer" prefWidth="750.0" spacing="10" style="-fx-background-color: transparent;">
                    <children>
                        <HBox fx:id="HBox1" alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="750.0" spacing="20" style="-fx-background-size: cover; -fx-background-color: transparent;">
                            <children>
                                <!-- Win/Loss Indicator Image -->
                                <ImageView fx:id="indicatorImage" fitHeight="50.0" fitWidth="50.0" />
                                <!-- Victory/Defeat Label -->
                                <Label fx:id="resultLabel" style="-fx-font-size: 24px; -fx-text-fill: white;" text="Victory" />
                                <!-- Score Label -->
                                <Label fx:id="scoreLabel" style="-fx-font-size: 24px; -fx-text-fill: white;" text="3-2" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>

        <!-- Back Button -->
        <Button fx:id="backButton" layoutY="6.0" onAction="#handleBack" style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="80.0" fitWidth="98.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/back-button.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

    </children>
</AnchorPane>
